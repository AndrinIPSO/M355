<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxCalc.ResultPage">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Label x:Name="lb_title" Grid.Row="0" Text="Ergebnis"/>
                <Label x:Name="lb_result" Grid.Row="1" />
                <Button x:Name="bt_back" Grid.Row="2" Text="Zurück" Clicked="bt_back_Clicked"/>
            </Grid>
    </Grid>
</ContentPage>